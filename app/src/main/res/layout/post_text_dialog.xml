<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/dialog_radius_background"
    android:layout_gravity="center"
    android:paddingHorizontal="50dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/postTitleEditText"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:hint="제목"
        android:inputType="text"/>

    <EditText
        android:id="@+id/postTextEditText"
        android:layout_width="195dp"
        android:layout_height="400dp"
        android:background="@drawable/square_background_border_black"
        android:layout_marginVertical="10dp"
        android:hint="내용"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnPostAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="추가"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnPostCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>